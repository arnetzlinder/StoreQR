@using Microsoft.AspNetCore.Identity;

@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - StoreQR</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StoreQR.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inknut+Antiqua&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/88669a913c.js" crossorigin="anonymous"></script>

</head>
<body>
    <header class="header">
        <nav class="navbar navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a id="headerlink" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="StoreQRLogo" src="/lib/StoreQRLogo.png" alt="Logo" />
                </a>

                <button id="navbarButton" class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" onclick="toggleNavbarIcon()">
                    <span id="navbarSpan1"></span>
                    <span id="navbarSpan2"></span>
                    <span id="navbarSpan3"></span>
                </button>
                <div id="addShow"class="navbar-collapse collapse justify-content-between p-3">
                    @if (SignInManager.IsSignedIn(User))
                    {
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="headerlink1" class="nav-link mt-3" asp-area="" asp-controller="Home" asp-action="Index">Hem</a>
                        </li>
                        <li class="nav-item">
                            <a id="headerlink2" class="nav-link mt-3" asp-area="" asp-controller="FamilyMember" asp-action="Index">Mina hushållsmedlemmar</a>
                        </li>
                        <li>
                            <a id="headerlink3" class="nav-link mt-3" asp-area="" asp-controller="Clothing" asp-action="Index">Kläder</a>
                        </li>
                        <li>
                            <a id="headerlink4" class="nav-link mt-3" asp-area="" asp-controller="Storing" asp-action="Index">Förvaringsutrymmen</a>
                        </li>
                        <li>
                                <a id="headerlink5" class="nav-link mt-3" asp-area="" asp-controller="About" asp-action="Index">Om StoreQR</a>
                        </li>
                    </ul>
                    }
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container StoreQRFooter">
            &copy; 2024 - StoreQR
        </div>
    </footer>
    <style>
        .navbar-toggler {
            background-color: transparent;
            border: none;
            padding: 10px;
            cursor: pointer;
            border-color: transparent !important;
            outline: none !important;
            transition: transform .6s cubic-bezier(.165,.84,.44,1);
        }

        .navbar-light .navbar-toggler
        {
            box-shadow:none;
        }

        .navbar-toggler span {
            display: block;
            width: 40px;
            height: 3px;
            background-color: white;
            margin-top: 5px;
            transition: transform .6s cubic-bezier(.165,.84,.44,1), opacity .3s cubic-bezier(.165,.84,.44,1), background-color .6s cubic-bezier(.165,.84,.44,1);
        }

        .navbar-collapse {
            transition: height 0.3s ease, opacity 0.2s ease-in-out;
            visibility: hidden;
        }

            .navbar-collapse.show {
                transition: height 0.3s ease, opacity 0.5s ease-in-out;
                opacity: 1;
                visibility: visible;
            }

        .collapse:not(.show) {
            display: block;
            padding: 1rem;
        }

        #headerlink {
            color: white;
        }

        #headerlink1 {
            color: white;
        }

        #headerlink2 {
            color: white;
        }
        #headerlink3 {
            color: white;
        }

        #headerlink4 {
            color: white;
        }

        #headerlink5 {
            color: white;
        }
        #navbarSpan1 {
            transform: translateY(-6px);
        }

        #navbarSpan2 {
            transform-origin: 100% 50%;
            transform: scaleX(.8);
        }

        #navbarSpan3 {
            transform: translateY(6px);
        }

        .navbar-toggler:hover #navbarSpan2 {
            transform: scale(1);
            transition: 0.5s ease-in-out;
        }

        .navbar-toggler.active {
            transform: rotate(-180deg);
        }

            .navbar-toggler.active #navbarSpan1 {
                transform: translateY(8px) rotate(45deg);
            }

            .navbar-toggler.active #navbarSpan2 {
                opacity: 0;
            }

            .navbar-toggler.active #navbarSpan3 {
                transform: translateY(-8px) rotate(-45deg);
            }

        
    </style>
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>
