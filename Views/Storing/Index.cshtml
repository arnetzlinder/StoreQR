@model List<StoreQR.Models.StoringUnit>
@{
    ViewData["Title"] = "Förvaringsutrymmen";
}

@if (User?.Identity?.IsAuthenticated == true)
{
    <div class="d-flex flex-column align-items-center justify-content-center">
        <h2 class="m-3">Mina förvaringsutrymmen</h2>
        <div class="row">
            <div class="d-flex align-items-center justify-content-center">
                <a class="btn btn-primary px-3 m-3" asp-area="" asp-controller="Clothing" asp-action="Create">Lägg till förvaringsutrymme</a>
            </div>
            <div class="d-flex flex-column align-items-center justify-content-center">
                @foreach (var item in Model)
                {
                    <div class="card StorageCard m-1 p-0">
                        <div class="d-flex justify-content-center align-items-center"> 
                        <img class="m-3" src="./lib/example-pic.jpg" alt="Example picture" />
                        </div>
                        <div class="card-body d-flex flex-column mx-3 p-3 StorageCardBody">
                            <h4 class="card-title text-center mx-3 p-3">@item.StorageName</h4>
                            <p class="card-text mx-3 p-3 text-center">Beskrivning: @item.StorageDescription</p>
                            @* <p class="card-text mx-3 p-3 text-center">Märke: @item.QRCode</p> *@
                            <a class="btn btn-primary m-3 justify-content-end " asp-area="" asp-controller="Storing" asp-action="Edit">Redigera</a>
                        </div>

                    </div>
                }
            </div>


        </div>

    </div>
}