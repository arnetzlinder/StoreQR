@{
    ViewData["Title"] = "Startsida";
}


@if (User?.Identity?.IsAuthenticated == true)
{

    <span class="m-5">Välkommen, @User.Identity.Name!</span>

    <div class="text-center WelcomeText">
        <h1 class="display-4 m-3">Välkommen till StoreQR</h1>
        <p class="m-3">Hjälp för dig att hålla koll på din förvaring</p>


    </div>

}
else
{
    <h1 class="text-center m-3">Välkommen!</h1>
    <p class="m-5 text-center">Logga in för att få tillgång till StoreQR</p>
}



